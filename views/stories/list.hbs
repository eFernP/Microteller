<div class="padding-global-list text-align-center">
  <div class="margin-top-list"></div>
  {{#if challenge}}
  <div class="padding-left-list text-align-left">
    <p>{{challenge.genre}}</p>
    <p class="tittle-bold">{{challenge.objective}}</p>
  </div>
  <p class="color-white-no-underline">Created by: {{challenge.creator.username}}</p>
  <a class="color-white" href="/challenges/{{challenge.id}}/new">Create a story for this challenge</a>
  {{/if}}
  <h1 class="h1-list padding-4">Stories {{#if filter}} - {{filter}} {{/if}}</h1>
  {{#if challenges}}
  {{else}}
  {{#if challenge}}
  {{else}}
  <a href="/stories/new" class="call-action">+</a>

  <form class="form-top" action="/stories/list/search" method="POST">
    <input class="size-form" type="text" name="search" placeholder="Title or user">
    <button class="size-form-two story-form" id="search-button" type="submit">Search</button>
  </form>
  <form class="form-top" action="/stories/list" method="POST">
    <select class="size-form story-form" id="filter-select" name="filter">
      <option value="All">All</option>
            <option value="Realistic">Realistic</option>
            <option value="Suspense">Suspense</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Science-Fiction">Science-Fiction</option>
            <option value="Horror">Horror</option>
            <option value="Romance">Romance</option>
            <option value="Others">Others</option>
    </select>
    <button class="size-form-two story-form" id="filter-button" type="submit">Filter</button>
  </form>
  {{/if}}
  {{/if}}
  {{#if stories}}
  <ul class="center-ul">
    {{#each stories}}
    <li class="stories-list">
      <a href="/stories/{{this.id}}" class="story-type">{{this.title}}</a>
      {{#if ../filter}}
      {{else}}
      {{this.genre}}
      {{/if}}
      {{#if challenge}}
      - Votes : {{this.votes}}
      {{/if}}
      <div class="visits-favs-list">
        <p>
          <img class="button-size" src="/images/view-dark.png" alt="views">
          {{this.visits}}
        </p>
        <p>
          <img class="button-size" id="heart-img" src="/images/heart-dark.png" alt="heart">
          {{this.favorites}}</p>
      </div>
</div>
</li>
{{/each}}
</ul>
{{else}}
<p class="no-stories">No stories yet</p>
{{/if}}
</div>
<div class="padding-global-finish"></div>