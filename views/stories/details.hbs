<img src="{{story.image}}" alt="" class="background-story">
<div class="padding-global padding-all-details">
  <p class="titulo-p-details">{{story.title}} - {{story.genre}}</p>
  <div>
    <div class="visits-favs">
      <p class="visits">
        <img class="button-size" src="/images/view.png" alt="views">
        {{story.visits}}
      </p>
      <div id="ajax-form">
        <input type="text" class="ajax-id" id={{story.id}} hidden></input>
        {{#if isFavorite}}
        <p id="full-heart"><img class="button-size" id="heart-img" src="/images/full-heart.png" alt="heart">
          {{else}}
          <p id="empty-heart"><img class="button-size" id="heart-img" src="/images/empty-heart.png" alt="heart">
            {{/if}}
            <span id="fav-number">{{story.favorites}}</span></p>
      </div>
    </div>
    <div>
      {{#if story.challenge}}
      <p class="sizeandcolor">This story is for this <a class="sizeandcolor color-white" href="/challenges/{{challenge.id}}">challenge</a></p>
      {{/if}}
    </div>

    <div>
      <p class="sizeandcolor">Created by {{story.creator.username}}</p>
    </div>
    <div class="flex-box-details">
      <div>
        {{#if story.challenge}}
        <p class="sizeandcolor">Votes: <span id="votes-number">{{story.votes}}</span></p>
        {{/if}}
      </div>


      <div class="padding-top">

        {{!-- <form action="/stories/{{story._id}}/add-favorite" method="POST">
          <button class="remove-background position-absolute-details" type="submit"><img class="button-size" src="/images/favorite-heart-button.png"
              alt=""></button>
        </form> --}}
      </div>

    </div>
    <div class="story-detail">
      <p class="p-limit story-type">{{story.text}}</p>
    </div>

    <div class="text-align-center padding-top-3 container-flex">
      {{#if story.lastStory}}
      <a class="sizeandcolor x" href="/stories/{{story.lastStory}}"><img class="size-imagen" src="/images/left-arrow.png"
          alt=""></a>
      {{/if}}
      {{#if story.nextStory}}
      <a class="sizeandcolor y" href="/stories/{{story.nextStory}}"><img class="size-imagen" src="/images/right-arrow.png"
          alt=""></a>
      {{/if}}
    </div>

    <div class="container-flex-details">
      {{#if story.challenge}}
      {{#if hasVoted}}
      {{else}}
      <div id="vote-form">
        <p id="vote-button" class="button-default">Vote</p>
      </div>
      {{!-- <form action="/stories/{{story._id}}/vote" method="POST">
        <button class="padding-top button-details" type="submit">Vote</button>
      </form> --}}
      {{/if}}
      {{/if}}
    </div>
    <h2 class="font-size-5">Comments</h2>
    <div class="cuadro-comments">
      {{#each comments}}
      <p class="font-size-4vh">{{this.creator.username}} : {{this.text}}</p>
      {{/each}}
      <p class="font-size-4vh" id="ajax-comments"></p>
    </div>
    <input class="input-size-details" id="comment-text" type="text" name="text" maxlength="100">
    <div id="comment-form" class="button-comment">
      <p id="comment-button" class="button-default">Add comment</p>
    </div>
    {{!-- <form action="/stories/{{story._id}}/comment" method="POST">
      <input class="input-size-details" type="text" name="text" maxlength="100">
      <div class="text-align-right">
        <button class="padding-top button-default padding-global-finish" type="submit">Add comment</button>
      </div>
    </form> --}}
    {{#if isCreator}}
    {{#if isLast}}
    <div class="padding-topandbottom">
      <a class="color-white font-size-4vh" href="/stories/{{story._id}}/continue">Add a continuation</a>
    </div>
    {{/if}}
    <div class="float-details">
      <div>
        <a class="font-size-4vh" href="/stories/{{story._id}}/edit"><img class="size-image-details" src="/images/edit.png"
            alt=""></a>
      </div>
      <div class="padding-div-white-details"></div>
      <div>
        <a class="font-size-4vh" href="/stories/{{story._id}}/delete"><img class="size-image-details" src="/images/delete.png"
            alt=""></a>
      </div>
    </div>
    {{/if}}
    {{#if data.messages.length}}
    <ul class="validation">
      {{#each data.messages}}<li class="message-validator">{{this}}</li>{{/each}}
    </ul>
    {{/if}}
    {{!-- {{> flash}} --}}
  </div>
  <div class="padding-global-finish"></div>