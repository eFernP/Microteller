<div class="text-align-center padding-global-myletters">
  <div>
    <h1 class="h1-list padding-h1-myletters">My Stories</h1>
    <a href="/stories/new" class="call-action">+</a>
    {{#if stories}}
    <form class="form-top" action="/stories/my-stories" method="POST">
      <select class="size-form story-form" id="filter-select" name="filter">
        <option value="All">All</option>
        <option value="Realistic">Realistic</option>
        <option value="Suspense">Suspense</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Science-Fiction">Science-Fiction</option>
        <option value="Horror">Horror</option>
        <option value="Romance">Romance</option>
        <option value="Others">Others</option>
      </select>
      <button class="size-form-two story-form" id="filter-button" type="submit">Filter</button>
    </form>
    <ul class="center-ul">
      {{#each stories}}
      <li class="stories-list">
        <a href="/stories/{{this.id}}" class="story-type">{{this.title}}</a> <br> {{this.genre}}
        {{#if this.challenge}} - Votes: {{this.votes}} {{/if}}
        <div class="visits-favs-list">
          <p>
            <img class="button-size" src="/images/view-dark.png" alt="views">
            {{this.visits}}
          </p>
          <p>
            <img class="button-size" id="heart-img" src="/images/heart-dark.png" alt="heart">
            {{this.favorites}}</p>
        </div>
      </li>
      {{/each}}
    </ul>
    {{else}}
    <p class="no-stories">You don't have any story yet</p>
    {{/if}}
  </div>
</div>
<div class="padding-global-finish"></div>