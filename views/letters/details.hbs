<p>For: {{letter.receiver}} - {{letter.ambit}}</p>
{{#if letter.challenge}}
<a href="/challenges/{{challenge.id}}">Challenge</a>
Votes: {{letter.votes}}
{{/if}}
<p>{{letter.text}}</p>
{{#if letter.lastLetter}}
<a href="/letters/{{letter.lastLetter}}">Last</a>
{{/if}}
{{#if letter.nextLetter}}
<a href="/letters/{{letter.nextLetter}}">Next</a>
{{/if}}

{{#if isCreator}}
<a href="/letters/{{letter._id}}/continue">Add another letter for {{letter.receiver}}</a>
<a href="/letters/{{letter._id}}/edit">Edit</a>
<a href="/letters/{{letter._id}}/delete">Delete</a>
{{/if}}

<h2>Comments</h2>
{{#each comments}}
<p>{{this.creator.username}} : {{this.text}}</p>
{{/each}}
<form action="/letters/{{letter._id}}/comment" method="POST">
<input type="text" name="text">
<button type="submit">Add comment</button>
</form>
{{> flash}}