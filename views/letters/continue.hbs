<div class="padding-global">
  <h1 class="h1-login">A note for: {{letter.receiver}} - {{letter.ambit}}</h1>
  <form action="/letters/{{letter._id}}/continue" method="POST" enctype="multipart/form-data">
    <div class="padding-text text-align-center">
      <label class="text-size-label" for="">Text</label><br>
      <textarea class="tamanno-imput-create" name="text" maxlength="150"></textarea>
    </div>
    <input type="text" name="receiver" value="{{letter.receiver}}" hidden>
    <input type="text" name="set" value="{{letter.set}}" hidden>
    <div class="text-align-center display-fex-continue input-file-container">
      <input class="input-file" id="my-file" type="file" name="image">
      <label tabindex="0" for="my-file" class="input-file-trigger">Upload a background image</label>
    </div>
    <p class="file-return"></p>
    <div class="padding-x padding-text text-align-center">
      <label class="text-size-label" for="">Do you want to send your note to somebody?</label><br>
      <input class="input-size" type="email" name="email" placeholder="Email" maxlength="50">
    </div>
    <div class="padding-boton">
      <button class=" padding-text button-login text-size-label" type="submit">Create note</button>
    </div>
  </form>

  {{#if data.messages.length}}
  <ul class="validation">
    {{#each data.messages}}<li class="message-validator">{{this}}</li>{{/each}}
  </ul>
  {{/if}}
</div>