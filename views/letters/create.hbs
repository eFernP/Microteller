<h1 class="h1-login padding-global">Create note</h1>
<div class="div1-create">
  <form action="/letters/new" method="POST">
    <div>
      <label class="text-size-label" for="">For whom is your note or what is the note about?</label><br>
      <input class="input-size" type="text" name="receiver">
    </div><br>
    {{#if challenge}}
    Ambit : {{challenge.ambit}}
    <input type="text" name="ambit" value="{{challenge.ambit}}" hidden>
    {{else}}
    <div class="padding-text2">
    <label class="text-size-label" for="">Ambit:</label>
    <select class="text-size-label" id="size-select" name="ambit">
      <option value="Experiences">Experiences</option>
      <option value="Family">Family</option>
      <option value="Friends">Friends</option>
      <option value="Lovers">Lovers</option>
      <option value="Me">Me</option>
      <option value="Objects">Objects</option>
      <option value="Places">Places</option>
      <option value="Others">Others</option>
    </select>
    </div>
    {{/if}}
    <div class="padding-text">
      <label class="text-size-label" for="">Text</label><br>
      <textarea class="tamanno-imput-create" name="text" maxlength="150"></textarea>
    </div>

    <div class="padding-text">
      <label class="text-size-label" for="">Do you want to send your note to somebody?</label><br>
      <input class="input-size" type="text" name="email" placeholder="Email">
    </div>

    <label><input type="checkbox" value="showUser"> Publish the note showing my user name</label>


    <input class="input-size" type="text" name="challenge" value="{{challenge.id}}" hidden>
    <button class=" padding-text button-login text-size-label" type="submit">Create note</button>
  </form>

  {{#if data.messages.length}}
  <ul class="validation">
    {{#each data.messages}}<li>{{this}}</li>{{/each}}
  </ul>
  {{/if}}

</div>