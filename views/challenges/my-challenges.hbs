<div class="padding-global">
  <h1>My Challenges {{#if filter}} - {{filter}} {{/if}}</h1>
  <form action="/challenges/my-challenges" method="POST">
    <select id="filter-select" name="filter">
      <option value="All">All</option>
      <option value="Experiences">Experiences</option>
      <option value="Family">Family</option>
      <option value="Friends">Friends</option>
      <option value="Lovers">Lovers</option>
      <option value="Me">Me</option>
      <option value="Objects">Objects</option>
      <option value="Places">Places</option>
      <option value="Others">Others</option>
    </select>
    <button id="filter-button" type="submit">Filter</button>
  </form>
  <h2>Participated</h2>
  <a href="/challenges/list"> Search challenges</a>
  {{#if letters}}
  <ul>
    {{#each letters}}

    <li>
      {{this.challenge.objective}} - {{this.ambit}}:
      <a href="/letters/{{this.id}}">{{this.receiver}}</a> - Votes: {{this.votes}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>You don't have any note</p>
  {{/if}}

  <h2>Created</h2>
  <a href="/challenges/new"> Create challenge</a>
  {{#if challenges}}
  <ul>
    {{#each challenges}}
    <li>
      <a href="/challenges/{{this.id}}">{{this.objective}}</a> - {{this.ambit}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>You don't have created any challenge</p>
  {{/if}}
</div>