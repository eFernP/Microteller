<div class="padding-global">
  <a href="/letters/list">See all notes</a>
  <h1>Challenges {{#if filter}} - {{filter}} {{/if}}</h1>
  <form action="/challenges/list/search" method="POST">
    <input type="text" name="search" placeholder="Challenge title or user name">
    <button class="size-form letter-form" id="search-button" type="submit">Search</button>
  </form>
  <form action="/challenges/list" method="POST">
    <select id="filter-select" name="filter">
      <option value="All">All</option>
      <option value="Experiences">Experiences</option>
      <option value="Family">Family</option>
      <option value="Friends">Friends</option>
      <option value="Lovers">Lovers</option>
      <option value="Me">Me</option>
      <option value="Objects">Objects</option>
      <option value="Places">Places</option>
      <option value="Others">Others</option>
    </select>
    <button id="filter-button" type="submit">Filter</button>
  </form>
  {{#if challenges}}
  <ul>
    {{#each challenges}}
    <li>
      <a href="/challenges/{{this.id}}">{{this.objective}}</a>
      {{#if ../filter}}
      {{else}}
      - {{this.ambit}}
      {{/if}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>No challenges yet</p>
  <a href="/challenges/new">Create challenge</a>
  {{/if}}
</div>