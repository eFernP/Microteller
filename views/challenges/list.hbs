<div class="padding-global text-align-center">
  {{!-- <a href="/letters/list">See all notes</a> --}}
  <h1 class="padding-top-list-challengues h1-list">Challenges {{#if filter}} - {{filter}} {{/if}}</h1>
   <a href="/challenges/new" class="call-action">+</a>
  <form class="form-top" action="/challenges/list/search" method="POST">
    <input class="size-form" type="text" name="search" placeholder="Title or user">
    <button class="size-form-two letter-form" id="search-button" type="submit">Search</button>
  </form>
  <form class="form-top" action="/challenges/list" method="POST">
    <select class="size-form letter-form" id="filter-select" name="filter">
      <option class="color-black-option" value="All">All</option>
      <option class="color-black-option" value="Experiences">Experiences</option>
      <option class="color-black-option" value="Family">Family</option>
      <option class="color-black-option" value="Friends">Friends</option>
      <option class="color-black-option" value="Lovers">Lovers</option>
      <option class="color-black-option" value="Me">Me</option>
      <option class="color-black-option" value="Objects">Objects</option>
      <option class="color-black-option" value="Places">Places</option>
      <option class="color-black-option" value="Others">Others</option>
    </select>
    <button class="size-form-two letter-form" id="filter-button" type="submit">Filter</button>
  </form>
  {{#if challenges}}
  <ul>
    {{#each challenges}}
    <li class="letters-list widthandheight">
      <a id="challengesid" href="/challenges/{{this.id}}">{{this.objective}}</a>
      {{#if ../filter}}
      {{else}}
      <p class="sizeletters">{{this.ambit}}</p>
      {{/if}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p class="no-notes">No challenges yet</p>
  {{/if}}
</div>
<div class="padding-global-finish"></div>