<div class="padding-global text-align-center">
  {{!-- <a href="/stories/list">See all stories</a> --}}
  <h1 class="padding-top-list-challengues h1-list">Challenges {{#if filter}} - {{filter}} {{/if}}</h1>
  <a href="/challenges/new" class="call-action">+</a>
  <form class="form-top" action="/challenges/list/search" method="POST">
    <input class="size-form" type="text" name="search" placeholder="Title or user">
    <button class="size-form-two story-form" id="search-button" type="submit">Search</button>
  </form>
  <form class="form-top" action="/challenges/list" method="POST">
    <select class="size-form story-form" id="filter-select" name="filter">
      <option class="color-black-option" value="All">All</option>
      <option class="color-black-option" value="Realistic">Realistic</option>
      <option class="color-black-option" value="Suspense">Suspense</option>
      <option class="color-black-option" value="Fantasy">Fantasy</option>
      <option class="color-black-option" value="Science-Fiction">Science-fiction</option>
      <option class="color-black-option" value="Horror">Horror</option>
      <option class="color-black-option" value="Romance">Romance</option>
      <option class="color-black-option" value="Others">Others</option>
    </select>
    <button class="size-form-two story-form" id="filter-button" type="submit">Filter</button>
  </form>
  {{#if challenges}}
  <ul>
    {{#each challenges}}
    <li class="stories-list widthandheight">
      <a id="challengesid" href="/challenges/{{this.id}}">{{this.objective}}</a>
      {{#if ../filter}}
      {{else}}
      <p class="sizeletters">{{this.genre}}</p>
      {{/if}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p class="no-stories">No challenges yet</p>
  {{/if}}
</div>
<div class="padding-global-finish"></div>